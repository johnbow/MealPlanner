<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Button fx:id="returnToCalendarButton" mnemonicParsing="false" onAction="#onReturnToCalendar" text="&lt;-">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" VBox.vgrow="NEVER">
         <children>
            <TextField prefColumnCount="30" promptText="Recipe Name">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </TextField>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Servings:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField maxHeight="25.0" maxWidth="25.0" prefHeight="25.0" prefWidth="25.0" promptText="1" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox>
               <children>
                  <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="NEVER">
                     <children>
                        <TextField promptText="Search Ingredients..." HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" text="+" />
                     </children>
                  </HBox>
                  <ListView fixedCellSize="3.0" prefHeight="200.0" VBox.vgrow="SOMETIMES">
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </ListView>
                  <TextArea promptText="Description" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <TableView>
              <columns>
                <TableColumn prefWidth="75.0" text="Ingredients" />
                <TableColumn prefWidth="75.0" text="Quantity" />
              </columns>
            </TableView>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="10.0" right="10.0" />
   </padding>
</VBox>
